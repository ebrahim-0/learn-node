extends ../layout/_base
block content 
    .container.mx-auto.px-4.py-8
        .max-w-2xl.mx-auto.bg-white.shadow-lg.rounded-lg.overflow-hidden
            img.w-full.h-64.object-cover(src=product.image alt=product.name)
            .p-6
                h2.text-3xl.font-bold.text-gray-800.mb-2= product.name
                p.text-gray-600.mt-2= product.description
                .flex.items-center.my-4
                    span.text-2xl.font-bold.text-gray-900=`$${product.price}`
                    span.text-sm.text-slate-900.line-through=`$ ${+product.price + 80}`
                .flex.items-center.justify-between.gap-2.mt-4
                    button.w-full.flex.items-center.justify-center.rounded-md.bg-slate-900.px-5.text-center.text-sm.font-medium.text-white(href='#' class='py-2.5 hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-blue-300')
                        svg.mr-2.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor' stroke-width='2')
                            path(stroke-linecap='round' stroke-linejoin='round' d='M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z')
                        | Add to cart
                    button.whitespace-nowrap.rounded-md.bg-slate-900.px-5.text-center.text-sm.font-medium.text-white(onclick=`location.href='/api/products/${product.id}'` class='py-3 hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-blue-300')
                       | Product Api
