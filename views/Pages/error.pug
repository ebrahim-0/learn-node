extends ../layout/_base
block content
    .w-full.max-w-lg.px-10.py-6.mx-auto.bg-white.rounded-lg.text-center
        .max-w-md.mx-auto.space-y-6
        .py-8.px-4.mx-auto.max-w-screen-xl(class='lg:py-16 lg:px-6')
            .mx-auto.max-w-screen-sm.text-center
            h1.mb-4.text-7xl.tracking-tight.font-extrabold.text-primary-600(class='lg:text-9xl dark:text-primary-500')= status
            p.mb-4.text-3xl.tracking-tight.font-bold.text-black(class='md:text-4xl')= message
            p.mb-4.text-lg.font-light.text-gray-500(class='dark:text-gray-400')= description
            a.inline-flex.text-white.bg-primary-600.font-medium.rounded-lg.text-sm.px-5.text-center.my-4(href='/' class='hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 py-2.5') Back to Homepage
