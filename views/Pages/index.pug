extends ../layout/_base
block content
  .container.mx-auto.p-8.text-center.flex.flex-col.justify-center.items-center(class='h-[calc(100vh-13rem)]')
    h1.page-title.text-4xl.font-bold.mb-4= title
    p.page-description.text-lg.text-gray-700.mb-6= description
    .flex.space-x-4.justify-center.items-center
      a(href="/v1/products" class="text-blue-500 hover:underline") Products v1
      a(href="/v2/products" class="text-blue-500 hover:underline") Products v2
      a(href="/v1/api/products" class="text-blue-500 hover:underline") Api Products v1
      a(href="/v2/api/products" class="text-blue-500 hover:underline") Api Products v2
      a(href="/template" class="text-blue-500 hover:underline") Template